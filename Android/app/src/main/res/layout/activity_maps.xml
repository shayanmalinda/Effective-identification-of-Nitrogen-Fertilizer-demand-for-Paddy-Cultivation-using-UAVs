<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <TextView
        android:id="@+id/tvFieldDataCount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:textColor="#000"
        android:text="Field Data Count : 0"
        android:textSize="18sp"
        android:padding="2sp"
        android:textAlignment="center"
        android:alpha="0.7"/>

    <androidx.cardview.widget.CardView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:elevation="0dp"
        map:cardBackgroundColor="@android:color/transparent"
        map:cardCornerRadius="2dp">

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:src="@drawable/ic_settings"
            android:backgroundTint="#D7D7D7"
            android:visibility="visible"
            android:alpha="0.96"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="12dp"
        android:elevation="0dp"
        map:cardBackgroundColor="@android:color/transparent"
        map:cardCornerRadius="2dp">

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:src="@drawable/ic_info"
            android:backgroundTint="#D7D7D7"
            android:visibility="visible"
            android:alpha="0.96"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="12dp"
        android:elevation="0dp"
        map:cardBackgroundColor="@android:color/transparent"
        map:cardCornerRadius="2dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/ivFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:src="@drawable/ic_center_focus"
            android:backgroundTint="#D7D7D7"
            android:visibility="visible"
            android:alpha="0.96"/>

    </androidx.cardview.widget.CardView>



</RelativeLayout>

