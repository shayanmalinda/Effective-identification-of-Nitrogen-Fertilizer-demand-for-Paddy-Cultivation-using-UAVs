<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/button_signin"
        android:layout_width="164dp"
        android:layout_height="60dp"
        android:text="@string/signin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_capture"
        android:layout_width="164dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/button_signin"
        app:layout_constraintBottom_toTopOf="@+id/imageView1"
        android:text="capture"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/button_capture"
        app:layout_constraintBottom_toTopOf="@id/button_signup"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="170dp"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/imageView1"
        app:layout_constraintBottom_toTopOf="@+id/button_myrequests"
        android:text="@string/register"
        android:backgroundTint="@color/orange_900"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/button_myrequests"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:text="@string/my_requests"
        app:layout_constraintTop_toBottomOf="@id/button_signup"
        app:layout_constraintBottom_toTopOf="@+id/button_map"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/button_map"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:text="@string/map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_myrequests"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/bt_capture_image"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="207dp"
        android:text="@string/capture_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_myrequests" />

</androidx.constraintlayout.widget.ConstraintLayout>